{
  "name": "cupper",
  "publisher": "thorstenausten",
  "displayName": "CUPPER - Cobol Uppercase",
  "description": "Set all (COBOL keyword - ) Strings to uppercase but ignore comments and literals",
  "version": "1.0.3",
  "engines": {
    "vscode": "^1.92.2"
  },
  "categories": [
    "Other"
  ],
  "keywords": [
    "Cobol"
  ],

  "activationEvents": [],
  "main": "./out/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "cupper.convertCobolKeywords",
        "title": "Convert Cobol Keywords to Uppercase"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src",
    "test": "vscode-test"
  },
  "devDependencies": {
    "@types/vscode": "^1.94.0",
    "@types/mocha": "^10.0.8",
    "@types/node": "20.x",
    "@typescript-eslint/eslint-plugin": "^8.7.0",
    "@typescript-eslint/parser": "^8.7.0",
    "eslint": "^9.11.1",
    "typescript": "^5.6.2",
    "@vscode/test-cli": "^0.0.10",
    "@vscode/test-electron": "^2.4.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/frai075a/cupper.git"
  },
  "license": "LGPL-3.0-or-later"
}
